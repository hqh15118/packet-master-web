<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           stylesheets="@login.css"
           prefHeight="600.0" prefWidth="800.0">
    <Text text="工控安全态势感知管理系统" StackPane.alignment="TOP_CENTER" id="tv_title">
        <StackPane.margin>
            <Insets>
                <top>40</top>
            </Insets>
        </StackPane.margin>
    </Text>
    <GridPane vgap="50" hgap="80" maxWidth="400" maxHeight="400" alignment="CENTER">
        <Label text="用户" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="user" text="admin" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="密码" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <PasswordField fx:id="password" GridPane.rowIndex="1" GridPane.columnIndex="1" />
        <Button fx:id="btn_login" GridPane.rowIndex="2"  GridPane.columnIndex="0"  text="登录" prefWidth="300" GridPane.columnSpan="2"
        GridPane.halignment="CENTER"/>
    </GridPane>
</StackPane>
